{
  "name": "monograuvi",
  "version": "1.0.0",
  "description": "A web application for creating music videos with reactive audio visuals.",
  "main": "src/main.js",
  "scripts": {
    "logo": "node scripts/show-logo.js",
    "dev": "concurrently -k -n \"üé®,üêç,‚ú®\" -c \"cyan,green,magenta\" \"npm run frontend\" \"npm run backend\" \"node scripts/wait-and-show-logo.js\"",
    "frontend": "NODE_OPTIONS='--max-old-space-size=2048' vite",
    "backend": "cd backend && venv/bin/python main.py",
    "setup": "chmod +x scripts/setup.sh && ./scripts/setup.sh",
    "install:all": "npm install && npm run setup",
    "backend:setup": "cd backend && chmod +x setup.sh && ./setup.sh",
    "backend:install": "cd backend && source venv/bin/activate && pip install -r requirements.txt",
    "backend:upgrade": "cd backend && source venv/bin/activate && pip install --upgrade -r requirements.txt",
    "dev:frontend-only": "NODE_OPTIONS='--max-old-space-size=4096' vite",
    "dev:backend-only": "cd backend && . venv/bin/activate && python main.py",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\""
  },
  "dependencies": {
    "@pixiv/three-vrm": "^3.4.2",
    "@vitejs/plugin-react": "^4.7.0",
    "@xenova/transformers": "^2.17.2",
    "colors": "^1.4.0",
    "lygia": "^1.3.3",
    "oh-my-logo": "^0.1.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-toastify": "^11.0.5",
    "rete": "^2.0.3",
    "rete-area-plugin": "^2.0.1",
    "rete-connection-plugin": "^2.0.1",
    "rete-context-menu-plugin": "^2.0.0",
    "rete-engine": "^2.0.0",
    "rete-history-plugin": "^2.0.0",
    "rete-react-plugin": "^2.0.2",
    "rete-render-utils": "^2.0.0",
    "three": "^0.178.0",
    "wavesurfer.js": "^7.10.0",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "autoprefixer": "^10.0.0",
    "axios": "^1.10.0",
    "concurrently": "^8.2.2",
    "postcss": "^8.0.0",
    "postcss-loader": "^8.1.1",
    "tailwindcss": "^3.0.0",
    "vite": "^4.0.0",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "music",
    "video",
    "visualization",
    "react",
    "webgl",
    "python",
    "fastapi"
  ],
  "author": "myrqyry",
  "license": "MIT"
}
