{
  "name": "monograuvi",
  "version": "1.0.0",
  "description": "A web application for creating music videos with reactive audio visuals.",
  "main": "src/main.js",
  "scripts": {
    "dev": "concurrently \"npm run frontend\" \"npm run backend\" --names \"üé®,üêç\" --prefix-colors \"cyan,green\"",
    "frontend": "NODE_OPTIONS='--max-old-space-size=4096' vite",
    "backend": "cd backend && source venv/bin/activate && python main.py",
    "backend:setup": "cd backend && chmod +x setup.sh && ./setup.sh",
    "backend:install": "cd backend && pip install -r requirements-fixed.txt",
    "dev:frontend-only": "NODE_OPTIONS='--max-old-space-size=4096' vite",
    "dev:backend-only": "cd backend && source venv/bin/activate && python main.py",
    "build": "vite build",
    "preview": "vite preview"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^4.6.0",
    "litegraph.js": "^0.7.18",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "wavesurfer.js": "^7.9.9",
    "zustand": "^4.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.0.0",
    "concurrently": "^8.2.2",
    "postcss": "^8.0.0",
    "postcss-loader": "^7.0.0",
    "tailwindcss": "^3.0.0",
    "vite": "^4.0.0"
  },
  "keywords": [
    "music",
    "video",
    "visualization",
    "react",
    "webgl",
    "python",
    "fastapi"
